  "dependencies": {
    "bootstrap": "^4.1.1",
    "classnames": "^2.2.6",
    "elasticlunr": "^0.9.5",
    "font-awesome": "^4.7.0",
    "lodash": "^4.17.10",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-helmet": "^5.2.0"
  },
  "devDependencies": {
    "@andrew-codes/gatsby-plugin-elasticlunr-search": "^1.0.4",
    "@types/classnames": "^2.2.4",
    "@types/lodash": "^4.14.110",
    "@types/node": "^10.3.6",
    "@types/react": "^16.4.2",
    "@types/react-dom": "^16.0.6",
    "@types/react-helmet": "^5.0.6",
    "eslint": "^5.7.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-config-typescript": "^1.1.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.10.0",
    "eslint-plugin-typescript": "^0.12.0",
    "gatsby": "^2.0.21",
    "gatsby-image": "^2.0.13",
    "gatsby-link": "^2.0.4",
    "gatsby-plugin-catch-links": "^2.0.4",
    "gatsby-plugin-copy-files": "^1.0.1",
    "gatsby-plugin-lodash": "^3.0.1",
    "gatsby-plugin-manifest": "^2.0.5",
    "gatsby-plugin-netlify": "^2.0.1",
    "gatsby-plugin-nprogress": "^2.0.5",
    "gatsby-plugin-offline": "^2.0.6",
    "gatsby-plugin-react-helmet": "^3.0.0",
    "gatsby-plugin-sass": "^2.0.1",
    "gatsby-plugin-sharp": "^2.0.6",
    "gatsby-plugin-sitemap": "^2.0.1",
    "gatsby-plugin-twitter": "^2.0.6",
    "gatsby-plugin-typescript": "^2.0.0",
    "gatsby-remark-copy-linked-files": "^2.0.5",
    "gatsby-remark-embed-gist": "^1.1.3",
    "gatsby-remark-images": "^2.0.4",
    "gatsby-remark-responsive-iframe": "^2.0.5",
    "gatsby-source-filesystem": "^2.0.3",
    "gatsby-transformer-json": "^2.1.4",
    "gatsby-transformer-remark": "^2.1.7",
    "gatsby-transformer-sharp": "^2.1.3",
    "lodash-webpack-plugin": "^0.11.5",
    "node-sass": "^4.9.3",
    "prettier": "^1.13.6",
    "typescript": "^3.0.1",
    "typescript-eslint-parser": "^20.0.0"
  },
  "resolutions": {
    "graphql": "^0.13.0"
  },
  "scripts": {
    "build": "gatsby build --prefix-paths",
    "develop": "gatsby develop",
    "lint": "eslint --ext .ts,.tsx src/",
    "format": "prettier --parser typescript --write \"src/**/*.ts*\""
  },
  "eslintConfig": {
    "extends": [
      "plugin:jsx-a11y/recommended",
      "typescript",
      "typescript/react",
      "typescript/prettier"
    ],
    "plugins": [
      "jsx-a11y"
    ],
    "rules": {
      "semi": "error",
      "no-undef": "off",
      "no-unused-vars": "off",
      "no-dupe-class-members": "off",
      "require-jsdoc": "error",
      "valid-jsdoc": [
        "error",
        {
          "preferType": {
            "any": "*",
            "object": "Object"
          },
          "requireReturnType": true,
          "requireParamDescription": true,
          "requireReturnDescription": true
        }
      ],
      "quotes": [
        "error",
        "double",
        {
          "avoidEscape": true
        }
      ],
      "no-console": "off"
    }
  }
}
