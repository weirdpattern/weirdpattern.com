{
  "collectCoverageFrom": [
    "<rootDir>/specs/**/?(*.)(spec|test).js?(x)"
  ],
  "setupFiles": [
    "<rootDir>/support/config/polyfills.js"
  ],
  "testMatch": [
    "<rootDir>/specs/**/?(*.)(spec|specs).js?(x)"
  ],
  "testEnvironment": "node",
  "testURL": "http://localhost",
  "transform": {
    "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
    "^.+\\.css$": "<rootDir>/support/config/jest/cssTransform.js",
    "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/support/config/jest/fileTransform.js"
  },
  "transformIgnorePatterns": [
    "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
  ],
  "moduleNameMapper": {
    "^react-native$": "react-native-web"
  }
}
